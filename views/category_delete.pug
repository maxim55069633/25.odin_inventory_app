extends layout

block content
  h1 #{title}: #{category.title}

  if category_courses.length

    p #[strong Delete the following courses before attempting to delete this category.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Courses

      dl
      each course in category_courses
        dt
          a(href=course.url) #{course.title}
        dd #{course.description}

  else
    p Do you really want to delete this Category?

    form(method='POST' action='')
      div.form-group
        input#categoryid.form-control(type='hidden',name='categoryid', required='true', value=category._id )

      button.btn.btn-primary(type='submit') Delete