extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='title') Category:
      input#name.form-control(type='text', placeholder='Health, Computer Science etc.' name='title' value=(undefined===category ? '' : category.title))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg