extends layout

block content

  h1 Category: #{category.title}

  div(style='margin-left:20px;margin-top:20px')

    h4 Courses

    dl
      each course in category_courses
        dt
          a(href=course.url) #{course.title}
        dd #{course.description}

      else
        p This category has no courses
  p
    a(href=category.url+'/delete') Delete Category
  p
    a(href=category.url+'/update') Update Category